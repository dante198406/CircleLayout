<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:MCircle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lmj.lmjcirclelayout.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.lmj.circle.MCircle
        android:id="@+id/myCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        MCircle:FirstR="15dp"
        MCircle:lineColor="#ccc"
        MCircle:rectColor="#80ff00ff"
        MCircle:textColor="#00f"
        MCircle:textSize="12sp"
        MCircle:unitR="10dp"
        MCircle:attrs=""
        MCircle:datas="3,2,1,0,3"
        android:background="#2200ff00"/>
    <Button
        android:onClick="reflushData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击刷新"/>

    <com.lmj.circle.CircleLayout
        android:layout_width="400dp"
        android:layout_height="400dp"

        android:background="@mipmap/bg2"
        android:padding="20dp"
        android:layout_below="@id/myCircle"
        >

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="取款" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="缴费" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="还钱" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="汇款" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="存款" />

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:onClick="btnClick"
            android:text="汇款" />
    </com.lmj.circle.CircleLayout>
</LinearLayout>
